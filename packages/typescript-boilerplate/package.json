{
  "name": "@noutc/typescript-boilerplate",
  "version": "0.0.0",
  "description": "A boilerplate example for a new Typescript project",
  "author": "No One Understands the Cloud Inc. <dev@noutc.com>",
  "homepage": "https://github.com/No-One-Understands-the-Cloud-Inc/dev-config/tree/master/packages/typescript-boilerplate#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/No-One-Understands-the-Cloud-Inc/dev-config.git"
  },
  "scripts": {
    "test": "jest",
    "test:cover": "jest --collectCoverage",
    "test:watch": "jest --watchAll",
    "build": "tsc",
    "docs": "typedoc src"
  },
  "bugs": {
    "url": "https://github.com/No-One-Understands-the-Cloud-Inc/dev-config/issues"
  },
  "devDependencies": {
    "@noutc/dev-config": "file:../dev-config",
    "@types/jest": "^24.0.19",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typedoc": "^0.15.0",
    "typedoc-plugin-external-module-name": "^2.1.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    },
    "eslintConfig": {
      "extends": "@noutc/eslint-config"
    },
    "husky": {
      "hooks": {
        "pre-commit": "pretty-quick --staged",
        "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
      }
    },
    "prettier": "@noutc/dev-config/prettier-config.json",
    "release": {
      "extends": "@noutc/semantic-release-config"
    }
  }
}
