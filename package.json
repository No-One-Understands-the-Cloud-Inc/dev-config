{
  "name": "@noutc/dev-config-packages",
  "version": "0.0.0",
  "description": "Shared development configurations for NOUTC projects",
  "main": "lerna.json",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "npx lerna exec 'npm install --ignore-scripts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/No-One-Understands-the-Cloud-Inc/dev-config.git"
  },
  "author": "No One Understands the Cloud Inc. <dev@noutc.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/No-One-Understands-the-Cloud-Inc/dev-config/issues"
  },
  "homepage": "https://github.com/No-One-Understands-the-Cloud-Inc/dev-config#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.2.0",
    "@noutc/dev-config": "file:packages/dev-config",
    "@noutc/eslint-config": "file:packages/eslint-config",
    "@noutc/semantic-release-config": "file:packages/semantic-release-config",
    "commitlint": "^8.2.0",
    "husky": "^3.0.9",
    "lerna": "^3.18.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0"
  },
  "peerDependencies": {
    "prettier": "^1.18.2"
  },
  "prettier": "./packages/dev-config/prettier-config.json",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@noutc/eslint-config"
  },
  "release": {
    "extends": "@noutc/semantic-release-config"
  }
}
